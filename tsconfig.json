{
    "compilerOptions": {
        "target": "ES6",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "jsx": "react",
        "rootDir": "src",
        "baseUrl": "src",
        "paths": {
            "@/*": ["*"] // nas importações fica mais simples: @/data/...
        },
        "allowJs": true,
        "resolveJsonModule": true
    },
    "include": [
        "src"
    ]
}